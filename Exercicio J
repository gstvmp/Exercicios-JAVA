import java.util.Locale;
import java.util.Scanner;

public class Main {

	public static void main(String[] args) {

		Scanner sc = new Scanner(System.in);
		 Locale.setDefault(Locale.US);
		
        int peca1, numero1, peca2, numero2;
		double valor1, valor2, valorPagar1, valorPagar2, valorFinal;

		peca1 = sc.nextInt();
		numero1 = sc.nextInt();
		valor1 = sc.nextDouble();
		
		peca2 = sc.nextInt();
		numero2 = sc.nextInt();
		valor2 = sc.nextDouble();
	

		valorPagar1 = numero1 * valor1;
		valorPagar2 = numero2 * valor2;
		valorFinal = valorPagar1 + valorPagar2;
		
		System.out.printf("VALOR A PAGAR = %.2f%n ", valorFinal);
